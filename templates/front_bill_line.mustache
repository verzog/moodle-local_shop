{{!
    @template local_shop/front_bill_line

    Classes required for JS:
    * none

}}
<!-- local_shop/front_bill_line -->
    <tr valign="top">
        <td width="60%" align="left" class="c0">
            <div class="shop-bill-abstract">
            {{{abstract}}}
            </div>
            {{#description}}
            <div class="shop-bill-description">
                {{{description}}}
            </div>
            {{/description}}
        </td>

        <td width="20%" align="left" class="c1">
            {{{itemcode}}}
        </td>

        <td width="8%" align="left" class="c2">
            {{{unitcost}}}&nbsp;{{{currency}}}
        </td>

        <td width="4%" class="c3">
            {{q}}
        </td>

        <td width="8%" align="right" style="text-align:right" class="lastcol">
            {{{totalprice}}}&nbsp;{{{currency}}}
        </td>
    </tr>
<!-- /local_shop/front_bill_line -->
