<!-- local_shop/bills_bill_attachment -->
<div class="shop-bills-attachments">

    {{{heading}}}

    {{^attachment}}
        {{{nobillattachementnotification}}}
    {{/attachment}}

    {{#attachment}}
    <table class="globaltable">
        {{#attachedfiles}}
        {{{attachedfileline}}}
        {{/attachedfiles}}
    </table>

    {{/attachment}}

    {{#attachurl}}
    <div class="shop-attach-a-file">
        <a href="{{{attachurl}}}" title="{{#str}}attach, local_shop{{/str}}">{{#pix}}attach, local_shop{{/pix}}</a>
    </div>
    {{/attachurl}}

</div>
