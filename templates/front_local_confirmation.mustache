    @template local_shop/front_local_confirmation

    Classes required for JS:
    * none

}}
<!-- local_shop/front_local_confirmation -->
<center>
<form name="confirmation" method="POST" action="{{{formurl}}}" style="display : inline">
    <table width="100%">
        <tr>
            <td align="center">
                {{#disabled}}
                    <br/><span id="disabled-advice-span" class="error">{{#str}}requiredataadvice, local_shop{{/str}}</span><br/>
                {{/disabled}}
                <input type="button" name="go_confirm" value="{{#str}}confirm, local_shop{{/str}}" onclick="send_confirm();" {{{disabled}}} />
            </td>
        </tr>
    </table>
</form>
</center>
<!-- /local_shop/front_local_confirmation -->
